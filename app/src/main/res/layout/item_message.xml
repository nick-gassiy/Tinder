<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="5dp">

    <ImageView
        android:id="@+id/receivePhoto"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/message_received_bg"
        android:paddingVertical="4dp"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:scaleType="fitCenter"/>

    <TextView
        android:paddingHorizontal="10dp"
        android:id="@+id/receiveMessage"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/message_received_bg"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/chatText"
        android:textSize="17dp"
        android:layout_below="@id/receivePhoto"/>

    <!--  -->

    <ImageView
        android:id="@+id/sendMessagePhoto"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/message_send_bg"
        android:paddingVertical="4dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:scaleType="fitCenter"/>

    <TextView
        android:paddingHorizontal="10dp"
        android:id="@+id/sendMessage"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/message_send_bg"
        android:layout_marginTop="10dp"
        android:textColor="@color/chatText"
        android:textSize="17dp"
        android:layout_below="@id/sendMessagePhoto"/>

</RelativeLayout>