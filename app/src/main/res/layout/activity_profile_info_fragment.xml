<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_gray"
    tools:context=".InnerWindows.ProfileInfoEditFragment"
    android:paddingHorizontal="30dp"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/save"
            android:textColor="@color/mainColor"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="20dp"
            />
    <LinearLayout
        android:id="@+id/photoLayoutEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveButton"
        android:background="@drawable/photo_stroke_layout"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/photo1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_stroke" />

            <ImageView
                android:id="@+id/photo1Add"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_alignEnd="@id/photo1"
                android:layout_alignBottom="@id/photo1"
                android:src="@drawable/add_icon"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/photo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_stroke" />

            <ImageView
                android:id="@+id/photo2Add"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_alignEnd="@id/photo2"
                android:layout_alignBottom="@id/photo2"
                android:src="@drawable/add_icon"
                />


        </RelativeLayout>




        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/photo3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_stroke" />

            <ImageView
                android:id="@+id/photo3Add"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_alignEnd="@id/photo3"
                android:layout_alignBottom="@id/photo3"
                android:src="@drawable/add_icon"
                />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/photo4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_stroke" />

            <ImageView
                android:id="@+id/photo4Add"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_alignEnd="@id/photo4"
                android:layout_alignBottom="@id/photo4"
                android:src="@drawable/add_icon"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/photo5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_stroke" />

            <ImageView
                android:id="@+id/photo5Add"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_alignEnd="@id/photo5"
                android:layout_alignBottom="@id/photo5"
                android:src="@drawable/add_icon"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/photo6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_stroke" />

            <ImageView
                android:id="@+id/photo6Add"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_alignEnd="@id/photo6"
                android:layout_alignBottom="@id/photo6"
                android:src="@drawable/add_icon"
                />


        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/photo7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_stroke" />

            <ImageView
                android:id="@+id/photo7Add"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_alignEnd="@id/photo7"
                android:layout_alignBottom="@id/photo7"
                android:src="@drawable/add_icon"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/photo8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_stroke" />

            <ImageView
                android:id="@+id/photo8Add"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_alignEnd="@id/photo8"
                android:layout_alignBottom="@id/photo8"
                android:src="@drawable/add_icon"
                />


        </RelativeLayout>




        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/photo9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_stroke" />

            <ImageView
                android:id="@+id/photo9Add"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_alignEnd="@id/photo9"
                android:layout_alignBottom="@id/photo9"
                android:src="@drawable/add_icon"
                />


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

        <RelativeLayout
            android:id="@+id/aboutLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photoLayoutEdit"
            >

            <TextView
                android:id="@+id/aboutTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="@string/about_text"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginVertical="20dp"/>



                <EditText
                    android:layout_below="@id/aboutTextView"
                    android:hint="Расскажите о себе"
                    android:id="@+id/aboutEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textCapSentences"
                    android:paddingHorizontal="15dp"
                    android:textSize="18dp"
                    android:textColor="@color/chatText"
                    android:background="@drawable/chat_edit_text"
                    />





        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
