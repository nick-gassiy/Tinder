<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tindercloneapp.MainWindows.ChatWindowFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/starterChatText"
            android:text="@string/messages_start"
            android:textColor="#2E2E2E"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            />
        <TextView
            android:id="@+id/messagesIntro"
            android:text="@string/messages_intro"
            style="@style/BigHintTextViewStyle"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

    </LinearLayout>
    
    <androidx.recyclerview.widget.RecyclerView
        android:background="#fff"
        android:id="@+id/chatListRecyclerView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />

</RelativeLayout>