<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".InnerWindows.ProfileSettingsActivity"
    android:background="@color/background_gray">



    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        >


    <TextView
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/save"
        android:textColor="@color/mainColor"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        />


    <LinearLayout
        android:id="@+id/premiumAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveButton"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:background="@drawable/next_button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="Получить Бусты"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:background="@drawable/next_button_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Получить Лайки"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nameSettingsLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/premiumAds"
        android:orientation="vertical">

        <TextView
            android:paddingVertical="5dp"
            android:paddingHorizontal="15dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/gray"
            android:textSize="17sp"
            android:text="@string/profile_settings"
            tools:ignore="RtlCompat"/>

        <LinearLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="14dp"
            android:paddingHorizontal="15dp"
            android:background="@color/white"
            android:layout_marginVertical="3dp">


            <TextView
                style="@style/settingsStyle"
                android:id="@+id/emailSettings"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="@string/email"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat">

            </TextView>
            <TextView
                style="@style/settingsStyle"
                android:id="@+id/emailSettingsTextView"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/gray"
                android:text="marka@gmail.com"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat">

            </TextView>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/numberSettingsLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="14dp"
            android:paddingHorizontal="15dp"
            android:background="@color/white"
            android:layout_marginVertical="3dp">


            <TextView
                style="@style/settingsStyle"
                android:id="@+id/numberSettings"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="@string/number"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat">

            </TextView>
            <TextView
                style="@style/settingsStyle"
                android:id="@+id/numberSettingsText"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/gray"
                android:text="+380671234567"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat">

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/passwordSettingsLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="14dp"
            android:paddingHorizontal="15dp"
            android:background="@color/white"
            android:layout_marginVertical="3dp">


            <TextView
                style="@style/settingsStyle"
                android:id="@+id/passwordSettings"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="@string/password"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat">

            </TextView>
            <TextView
                style="@style/settingsStyle"
                android:id="@+id/passwordSettingsText"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/gray"
                android:inputType="textPassword"
                android:text="город"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginVertical="3dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="14dp"
                android:paddingHorizontal="15dp"

                >


                <TextView
                    style="@style/settingsStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/max_length"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat">

                </TextView>
                <TextView
                    style="@style/settingsStyle"
                    android:id="@+id/currentGeo"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/gray"
                    android:text="20км"
                    android:textAlignment="textEnd"
                    tools:ignore="RtlCompat">

                </TextView>

            </LinearLayout>




            <com.xw.repo.BubbleSeekBar
                android:id="@+id/geoSeekBar"
                android:paddingHorizontal="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bsb_track_color="@color/gray"
                app:bsb_second_track_color="@color/mainColor"
                app:bsb_max="150"
                app:bsb_min="20"
                app:bsb_progress="20"
                app:bsb_section_count="10"
                app:bsb_section_text_position="bottom_sides"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_show_section_mark="true"
                app:bsb_show_thumb_text="true"
                app:bsb_section_text_size="18sp"
                app:bsb_thumb_text_size="17sp"
                app:bsb_bubble_text_size="17sp"/>
            
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginVertical="3dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="14dp"
            android:paddingHorizontal="15dp"
            >


            <TextView
                style="@style/settingsStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="@string/age_radius"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat">

            </TextView>
            <TextView
                style="@style/settingsStyle"
                android:id="@+id/currentAge"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/gray"
                android:text="18-23"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat">

            </TextView>

        </LinearLayout>




        <com.xw.repo.BubbleSeekBar
            android:id="@+id/ageSeekBar"
            android:paddingHorizontal="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bsb_track_color="@color/gray"
            app:bsb_second_track_color="@color/mainColor"
            app:bsb_max="70"
            app:bsb_min="18"
            app:bsb_progress="23"
            app:bsb_section_count="10"
            app:bsb_section_text_position="bottom_sides"
            app:bsb_show_section_mark="true"
            app:bsb_show_thumb_text="true"
            app:bsb_section_text_size="18sp"
            app:bsb_thumb_text_size="17sp"
            app:bsb_bubble_text_size="17sp"/>


    </LinearLayout>












    <TextView
        android:id="@+id/exitButton"
        android:paddingVertical="14dp"
        android:paddingHorizontal="15dp"
        style="@style/settingsStyle"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:text="@string/exit"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat"
        android:layout_marginVertical="3dp"
        android:background="@color/white"/>

        <TextView
            android:id="@+id/signOutButton"
            android:paddingVertical="14dp"
            android:paddingHorizontal="15dp"
            style="@style/settingsStyle"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:text="@string/sign_out"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:layout_marginVertical="3dp"
            android:background="@color/white"/>



    
</LinearLayout>
</RelativeLayout>

</ScrollView>