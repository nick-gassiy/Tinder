<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="BigTextViewStyle">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">40sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="BigTextViewStyleEnd">
        <item name="android:textColor">#626262</item>
        <item name="android:textSize">15pt</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="HintTextViewStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">6pt</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="BigHintTextViewStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">8pt</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>



    <style name="ButtonRegisterStyle">
        <item name="android:textSize">8pt</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="ButtonRegisterStyleFree">
        <item name="android:textSize">8pt</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="ButtonRegisterColoredStyleFree">
        <item name="android:textSize">8pt</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="PhotoStrokeStyle">

        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="ErrorTextViewStyle">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">6pt</item>
        <item name="android:layout_marginTop" tools:ignore="NewApi">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="RoundSmallStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">8dp</item>
    </style>

    <style name="RoundStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.3</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">8dp</item>
    </style>


    <style name="ProfileGrayTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="settingsStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
